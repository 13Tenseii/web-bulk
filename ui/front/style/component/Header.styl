.Header {
  background $mainGradient
  border 0
  position fixed
  z-index 101
  top 0
  left 0
  right 0
  height $headerHeight
  display flex
  padding 1.25rem
  box-shadow 0 7px 30px 0 rgb(0 0 0 / 20%)
  border-bottom-left-radius 5px
  border-bottom-right-radius 5px

  &__label {
    color white;
    font-size: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  &__user {
    color $darkGrey
    display flex
    margin-left auto
    align-items center
  }

  &__lang {
    width 4.6rem
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  &__lang input {
    border .15rem solid $darkGrey !important;
  }

  &__logout-btn {
    width 1.9rem
    text-align center
    color $darkGrey
    cursor pointer
    border: 0;
    background: none;
    padding: 0;
  }
}