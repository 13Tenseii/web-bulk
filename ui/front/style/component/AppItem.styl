.App-item {
  width  14.5rem
  height 7rem
  margin: 5rem;
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  cursor pointer
  transition 0.3s ease;
  background-color: white;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
  border-top: 3px solid #d2d6de;

  &__clicked {
    box-shadow: 0px 0px 26px 11px rgba(0, 0, 0, 0.2) inset !important;
  }

  &:hover {
    box-shadow: 0px 5px 33px 2px rgba(0, 0, 0, 0.2);
  }

  &__content {

  }

  &__label {
    font-size: 2rem;
    font-weight: bold;
    color: $darkGrey
  }
}