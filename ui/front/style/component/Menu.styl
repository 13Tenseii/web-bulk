.Menu {
  width 100%
  height 100%
  background-color $darkGrey

  &__list {
    padding-top: 0.4rem;
    display: flex;
    flex-direction: column;

    &__item {
      color #b8c7ce
      background-color #222d32
      height 2.75rem
      display flex
      align-items center
      cursor pointer
      padding-left: 1rem;

      &:hover {
        color white
        background-color #1e282c
      }

      &__icon {
        margin-right: 0.7rem;
      }
    }

    &__item-active {
      color white
      background-color #1e282c
      border-left 3px solid #3c8dbc
    }
  }

  &__header {
    height 3.75rem
    background-color #1a2226
    color #4b646f
    display flex
    align-items center
    justify-content center
    font-size: 1.3rem;
  }
}