.Auth-page {
  background $authPageGradient
  display flex
  flex-direction column
  align-items center
  justify-content center
  position relative
  height 100%
  width 100%

  &__label {
    margin-bottom: 0.5em;
    color $smokeWhite;
    font-size: 1.75rem;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  &:before {
    content ''
    position absolute
    top 0
    left 0
    height 100%
    width 100%
  }

  &__login-form {
    padding 3em
    padding-top: 2em;
    position relative
    background $darkGrey
    box-shadow: 0px 5px 10px 7px rgba(30, 30, 30, 0.2)
    border-radius: 20px;
  }

  &__flex-row {
    display flex
    margin-bottom 1em
  }

  &__icon {
    width 3em
    display flex
    align-items center
    justify-content center
    background rgb(197 204 216)
    cursor pointer
    margin 0
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
  }

  &__input {
    flex 1
    padding 1em
    border 0
    color black
    font-size 1rem
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;

    &:focus {
      outline none
    }
  }

  &__submit-btn {
    display block
    padding 1em
    width 100%
    background $leftSideColor
    border 0
    color white
    cursor pointer
    font-size 0.9em
    font-weight 600
    text-shadow 0 1px 0 rgba(black, -2)
    border-radius: 10px;

    &:hover {
      outline none
      background #275a78
      transition 0.5s
    }
  }

  ::placeholder {
    color $lightGray
  }
}